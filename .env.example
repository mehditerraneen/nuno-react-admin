# Environment Configuration
# Copy this file to .env and enter your actual credentials

# ==============================================================================
# REQUIRED: Backend API URL
# ==============================================================================
# This is baked into the frontend at build time
# For production, use your actual backend URL (e.g., https://api.inur.sur.lu/fast)
VITE_SIMPLE_REST_URL=http://127.0.0.1:8000/fast

# ==============================================================================
# Authentication (for testing/development)
# ==============================================================================
VITE_TEST_USERNAME=your-username-here
VITE_TEST_PASSWORD=your-password-here
VITE_JWT_SECRET=your-secret-key-here

# ==============================================================================
# Environment Settings
# ==============================================================================
VITE_ENV=development
VITE_DEBUG=true

# ==============================================================================
# Docker Deployment Settings
# ==============================================================================
# Host port mapping (default: 3002)
HOST_PORT=3002

# Domain for Traefik (production only)
DOMAIN=nuno.sur.lu
